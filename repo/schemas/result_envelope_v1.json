{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sheratan Result Envelope v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "job_id",
    "ok"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "result_envelope_v1"
    },
    "job_id": {
      "type": "string"
    },
    "ok": {
      "type": "boolean"
    },
    "error": {
      "type": [
        "string",
        "null"
      ]
    },
    "result": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": true
    },
    "completed_at": {
      "type": [
        "string",
        "null"
      ]
    },
    "metrics": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": true
    },
    "refs": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": true,
      "properties": {
        "trace_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "worker_id": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}