{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sheratan Job Envelope v1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "job_id",
    "intent",
    "action",
    "provenance"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "job_envelope_v1"
    },
    "job_id": {
      "type": "string"
    },
    "mission_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "task_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "intent": {
      "type": "string"
    },
    "action": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "kind"
      ],
      "properties": {
        "kind": {
          "type": "string"
        },
        "params": {
          "type": "object"
        },
        "capabilities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "requires": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "source_zone": {
              "type": [
                "string",
                "null"
              ]
            },
            "paths": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "network": {
              "type": "boolean"
            },
            "llm": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "source_zone"
      ],
      "properties": {
        "source_zone": {
          "type": "string"
        },
        "created_at": {
          "type": [
            "string",
            "null"
          ]
        },
        "created_by": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true
        },
        "build_id": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "policy_context": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "priority": {
          "type": [
            "string",
            "null"
          ]
        },
        "risk": {
          "type": [
            "string",
            "null"
          ]
        },
        "gates_profile": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "refs": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "trace_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "chain_id": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}