{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "policy_bundle_v1",
    "type": "object",
    "required": [
        "schema_version",
        "policy_id",
        "version",
        "created_at",
        "approved_by",
        "hash",
        "rules"
    ],
    "properties": {
        "schema_version": {
            "const": "policy_bundle_v1"
        },
        "policy_id": {
            "type": "string",
            "minLength": 3
        },
        "version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "approved_by": {
            "type": "string",
            "minLength": 1
        },
        "hash": {
            "type": "string",
            "pattern": "^sha256:[a-f0-9]{64}$"
        },
        "rules": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "rule_id",
                    "type",
                    "target",
                    "severity"
                ],
                "properties": {
                    "rule_id": {
                        "type": "string",
                        "minLength": 1
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "require",
                            "forbid",
                            "allow"
                        ]
                    },
                    "target": {
                        "type": "string",
                        "minLength": 1
                    },
                    "value": {},
                    "severity": {
                        "type": "string",
                        "enum": [
                            "soft",
                            "hard"
                        ]
                    },
                    "notes": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}